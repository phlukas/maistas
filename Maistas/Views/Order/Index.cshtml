@model IEnumerable<Order>
@{
	ViewData["title"] = "Užsakymai";
}

<div class="main-content-header container-fluid d-flex d-row justify-content-between align-items-center p-2">
	<span class="title">@ViewData["title"]</span>
	<span class="actions">
		<a href="@Url.Action("Create")" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Pateikti naują užsakymą</a>
	</span>
</div>

<div class="d-flex justify-content-center">
	<table class="entitylist table table-striped table-hover">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Restaurant)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Status)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Date)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.OrderTime)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.DeliveryTime)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.TotalCost)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>a
					<th>
						@Html.DisplayFor(model => item.Restaurant.Title)
					</th>
					<td>
						@Html.DisplayFor(model => item.Status)
					</td>
					<td>
						@Html.DisplayFor(model => item.Date)
					</td>
					<td>
						@Html.DisplayFor(model => item.OrderTime)
					</td>
					<td>
						@Html.DisplayFor(model => item.DeliveryTime)
					</td>
					<td>
						@Html.DisplayFor(model => item.TotalCost)
					</td>
					<td>
						<a href="@Url.Action("AddDish")" class="btn btn-primary">Pridėti patiekalą</a>
						<a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger"><i class="fa-solid fa-trash"></i> Šalinti</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>