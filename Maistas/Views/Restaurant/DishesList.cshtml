@model DishListView
@{
    ViewData["title"] = "Patiekalų sąrašas";
    Layout = "_Layout";
}
<div class="main-content-header container-fluid d-flex d-row justify-content-between align-items-center p-2">
    <span>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Peržiūrėti restoranų sąrašą</a>
    </span>
    
</div>

<div class="main-content-header container-fluid d-flex d-row justify-content-between align-items-center p-2">
    <span class="title">
        <h1>@ViewData["title"]</h1>
    </span>
</div>

@using (Html.BeginForm())
{
    <div>
        <table>
            <tr>
                <td>
                    <label>Kaina nuo:</label>
                    @Html.EditorFor(m => m.PriceFrom, new { @class = "form-control" })
                    <label>Kaina iki:</label>
                    @Html.EditorFor(m => m.PriceTo, new { @class = "form-control" })
                </td>
            </tr>
            <tr>
                <td>
                    <label>Kalorijų kiekis nuo:</label>
                    @Html.EditorFor(m => m.CaloriesFrom, new { @class = "form-control" })
                    <label>Kalorijų kiekis iki:</label>
                    @Html.EditorFor(m => m.CaloriesTo, new { @class = "form-control" })
                </td>
                                
            </tr>
            <tr>
                <td>
                    <label>Svoris nuo:</label>
                    @Html.EditorFor(m => m.WeightFrom, new { @class = "form-control" })
                    <label>Svoris iki:</label>
                    @Html.EditorFor(m => m.WeightTo, new { @class = "form-control" })
                </td>
                                                
            </tr>
            <tr>
                <td>
                    <label>Vegetariškas patiekalas</label>
                    @Html.CheckBoxFor(m=>m.IsVegetarian)
                </td>
            </tr>
            
        </table>
    </div>
    
    <div>
        <button name="save" value="1" class="btn btn-primary">Peržiūrėti rušiuotą sąrašą</button>
    </div>
}

<table class="entitylist table table-striped table-hover">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model=> model.Dishes[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model=> model.Dishes[0].WeightInGrams)
        </th>
        <th>
            @Html.DisplayNameFor(model=> model.Dishes[0].Calories)
        </th>
        <th>
            @Html.DisplayNameFor(model=> model.Dishes[0].Vegan)
        </th>
        <th>
            @Html.DisplayNameFor(model=> model.Dishes[0].Price)
        </th>
        
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Dishes)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WeightInGrams)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Calories)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vegan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
            </tr>
        }
    </tbody>
</table>

